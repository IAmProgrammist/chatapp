<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.chatapp">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_logo"
        android:label="@string/app_name"
        android:noHistory="true"
        android:roundIcon="@drawable/logo_logo"
        android:extractNativeLibs="false"
        android:supportsRtl="true"
        android:launchMode="singleTask"
        android:largeHeap="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.ads.AD_MANAGER_APP"
            android:value="true" />
        <service
            android:enabled="true"
            android:name=".SuperDuperService">
        </service>
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginOrCreateUserActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".LoginUserActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".CreateUserActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".JoinOrCreateRoomActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".LoginRoomListViewActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".ChatActivitry"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".LoginRoomActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".CreateRoomActivity"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>